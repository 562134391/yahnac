<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/comment_root"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical">

  <View
    android:layout_marginTop="@dimen/comments_divider_height"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@drawable/divider_horizontal_bright" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/default_padding">

    <com.malmstein.yahnac.views.fonts.YahnacTextView
      style="@style/HNews.CommentHeader"
      android:id="@+id/comment_by"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/grey"
      tools:text="by user" />

    <com.malmstein.yahnac.views.fonts.YahnacTextView
      style="@style/HNews.CommentHeader"
      android:id="@+id/comment_when"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="@color/grey"
      android:paddingLeft="@dimen/card_content_padding"
      tools:text="2 hours ago" />

  </LinearLayout>

  <com.malmstein.yahnac.views.fonts.CommentTextView
    style="@style/HNews.CommentText"
    android:id="@+id/comment_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/card_content_padding"
    tools:text="This is a comment"/>

</LinearLayout>

