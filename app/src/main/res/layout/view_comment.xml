<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/comment_root"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical">

  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginTop="@dimen/card_content_padding"
    android:background="@drawable/divider_horizontal_bright" />

  <com.malmstein.yahnac.views.fonts.CommentTextView
    style="@style/HNews.CommentText"
    android:id="@+id/comment_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/content_top_padding"
    android:paddingBottom="@dimen/content_bottom_padding"
    tools:text="This is a comment" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/default_item_height"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <com.malmstein.yahnac.views.fonts.YahnacTextView
        style="@style/HNews.CommentHeader"
        android:id="@+id/comment_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey"
        tools:text="by user" />

      <com.malmstein.yahnac.views.fonts.YahnacTextView
        style="@style/HNews.CommentTime"
        android:id="@+id/comment_when"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey"
        android:paddingTop="@dimen/card_content_padding"
        tools:text="2 hours ago" />

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="right">

      <ImageButton
        android:id="@+id/comment_reply_action"
        style="@style/HNews.FeedAction"
        android:src="@drawable/ic_reply_small" />

    </LinearLayout>

  </LinearLayout>

</LinearLayout>

