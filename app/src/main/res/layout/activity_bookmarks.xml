<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/navigation_drawer"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".NewsActivity">

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:name="com.malmstein.yahnac.stories.BookmarksFragment"
      android:id="@+id/bookmarks_fragment"
      android:layout_marginTop="@dimen/appbar_bookmarks_height" />

    <com.malmstein.yahnac.views.toolbar.AppBarContainer
      style="@style/HNews.AppBar.NewsContainer"
      android:id="@+id/app_bar_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fitsSystemWindows="true" />

  </FrameLayout>

  <include layout="@layout/navigation_drawer_list" />

</android.support.v4.widget.DrawerLayout>

