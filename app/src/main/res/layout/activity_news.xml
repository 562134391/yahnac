<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <com.malmstein.hnews.views.toolbar.AppBarContainer
    style="@style/HNews.AppBar.NewsContainer"
    android:id="@+id/app_bar_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.malmstein.hnews.views.sliding_tabs.SlidingTabLayout
      android:id="@+id/sliding_tabs"
      style="@style/HNews.Feed.TabStrip"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

  </com.malmstein.hnews.views.toolbar.AppBarContainer>

  <FrameLayout
    android:id="@+id/feed_main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
      android:id="@+id/news_pager"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />

  </FrameLayout>

</LinearLayout>

