<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <FrameLayout
    android:id="@+id/login_background_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:background="@drawable/login_background" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
      android:id="@+id/login_header_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      tools:minHeight="120dp" />

    <ProgressBar
      android:id="@+id/login_progress"
      style="?android:attr/progressBarStyleHorizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:indeterminate="true"
      android:visibility="invisible" />

    <TextView
      android:id="@+id/login_header_text"
      style="@style/HNews.Login.HeaderText"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

    <ScrollView
      android:id="@+id/login_scroll_container"
      style="@style/HNews.Login.ScrollContainer"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/login_scrolling_content_padding_bottom"
        android:animateLayoutChanges="true">

        <TextView
          android:id="@+id/login_prompt"
          style="@style/HNews.Login.Prompt.Login"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />

        <TextView
          android:id="@+id/login_error_label"
          style="@style/HNews.Login.Error"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          tools:visibility="visible"
          android:text="@string/login_not_valid" />

        <android.support.design.widget.TextInputLayout
          android:theme="@style/Theme.HNews.White"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <EditText
            style="@style/HNews.Login.EditText.Username"
            android:theme="@style/Theme.HNews.White"
            android:id="@+id/login_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
          android:theme="@style/Theme.HNews.White"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <EditText
            style="@style/HNews.Login.EditText.Password"
            android:theme="@style/Theme.HNews.White"
            android:layout_marginTop="@dimen/default_padding"
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

      </LinearLayout>

    </ScrollView>

    <LinearLayout
      style="@style/HNews.Login.ScrollContainer"
      android:id="@+id/login_buttons_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="bottom|end">

      <com.malmstein.yahnac.views.fonts.YahnacTextView
        android:id="@+id/login_cancel"
        android:theme="@style/Theme.HNews.White"
        style="@style/HNews.Login.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_cancel" />

      <com.malmstein.yahnac.views.fonts.YahnacTextView
        android:id="@+id/login_login"
        android:theme="@style/Theme.HNews.White"
        style="@style/HNews.Login.Button"
        android:drawablePadding="@dimen/login_button_drawable_padding"
        android:drawableRight="@drawable/ic_next_glyph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_login" />

    </LinearLayout>

  </LinearLayout>

</merge>
