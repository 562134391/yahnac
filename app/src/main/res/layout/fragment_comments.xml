<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <com.malmstein.hnews.views.DelegatedSwipeRefreshLayout
    android:id="@+id/feed_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <TextView
        android:id="@+id/article_comments_action"
        style="@style/HNewsButton.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_orange"
        android:textAllCaps="true"
        android:layout_marginLeft="@dimen/card_content_padding"
        android:focusable="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:transitionName="comment"
        tools:text="26 COMMENTS" />

      <ListView
        style="@style/HNews.List"
        android:id="@+id/listview_comments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="@dimen/comments_padding"
        android:divider="@color/app_background"
        android:padding="@dimen/list_padding" />

    </LinearLayout>

  </com.malmstein.hnews.views.DelegatedSwipeRefreshLayout>

</FrameLayout>

