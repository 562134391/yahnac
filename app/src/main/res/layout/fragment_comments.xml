<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <com.malmstein.hnews.views.DelegatedSwipeRefreshLayout
    android:id="@+id/feed_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <com.malmstein.hnews.views.StoryHeaderView
        android:id="@+id/story_header_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

      <android.support.v7.widget.RecyclerView
        style="@style/HNews.List"
        android:id="@+id/list_comments"
        android:padding="@dimen/list_padding"
        android:dividerHeight="@dimen/comments_padding"
        android:divider="@color/app_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    </LinearLayout>

  </com.malmstein.hnews.views.DelegatedSwipeRefreshLayout>

</FrameLayout>

