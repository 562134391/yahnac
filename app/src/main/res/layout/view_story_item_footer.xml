<?xml version="1.0" encoding="utf-8"?>

<com.malmstein.hnews.views.FooterWithTopDividerLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  style="@style/HNews.FeedFooter"
  android:layout_width="match_parent"
  android:layout_height="@dimen/button_root_height"
  android:orientation="horizontal"
  android:layout_below="@id/article_text_root">

  <ImageButton
    android:id="@+id/article_share_action"
    style="@style/HNews.FeedAction"
    android:src="@drawable/ic_share" />

  <ImageButton
    android:id="@+id/article_external_action"
    style="@style/HNews.FeedAction"
    android:src="@drawable/ic_exit_to_app"
    android:layout_marginLeft="@dimen/card_content_padding" />

  <LinearLayout
    android:id="@+id/article_comments"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginLeft="@dimen/card_content_padding"
    android:background="@drawable/selector_card_button">

    <ImageButton
      android:id="@+id/article_comments_action"
      style="@style/HNews.FeedImage"
      android:src="@drawable/ic_comment_outline_grey"
      android:layout_width="wrap_content"
      android:layout_height="match_parent" />

    <TextView
      style="@style/HNews.FeedComments"
      android:id="@+id/article_comments_label"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      tools:text="26 comments" />

  </LinearLayout>

  <TextView
    android:id="@+id/article_score"
    android:layout_width="match_parent"
    android:gravity="right|center_vertical"
    android:layout_height="match_parent"
    android:textColor="@color/light_grey"
    tools:text="123 points"
    android:layout_marginRight="@dimen/card_content_padding" />

</com.malmstein.hnews.views.FooterWithTopDividerLayout>