<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="HNews.Login.Header" parent="@style/Base.TextAppearance.AppCompat.Title">
    <item name="android:textColor">@color/white</item>
    <item name="android:text">@string/title_add_account</item>
    <item name="android:paddingLeft">@dimen/form_side_padding</item>
    <item name="android:background">@color/orange</item>
  </style>

  <style name="HNews.Login.EditText" parent="@style/Base.Widget.AppCompat.EditText">
    <item name="android:layout_marginLeft">@dimen/form_side_padding</item>
    <item name="android:layout_marginRight">@dimen/form_side_padding</item>
    <item name="android:layout_marginTop">@dimen/form_side_padding</item>
    <item name="android:layout_marginBottom">@dimen/default_padding</item>
  </style>

  <style name="HNews.Login.EditText.Username">
    <item name="android:inputType">text</item>
    <item name="android:hint">@string/hint_username</item>
  </style>

  <style name="HNews.Login.EditText.Password">
    <item name="android:inputType">textPassword</item>
    <item name="android:hint">@string/hint_password</item>
  </style>

  <style name="HNews.Login.Button" parent="HNewsButton.Borderless">
    <item name="android:paddingRight">@dimen/form_padding</item>
    <item name="android:paddingLeft">@dimen/form_padding</item>
    <item name="android:text">@string/action_login</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textColor">@color/black</item>
  </style>

</resources>
