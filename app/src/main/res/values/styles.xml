<resources>

  <style name="HNews.ActionBar" parent="Widget.AppCompat.Light.ActionBar">
    <item name="android:displayOptions">showTitle</item>
    <item name="android:background">@color/orange</item>

    <item name="displayOptions">showTitle</item>
    <item name="background">@color/orange</item>
  </style>

  <style name="HNews.ActionBar.Widget" parent="Theme.AppCompat">
    <item name="android:dropDownListViewStyle">@style/HNews.DropDownListView</item>
    <item name="android:textAppearance">?android:attr/textAppearanceInverse</item>
  </style>

  <style name="HNews.DropDownListView" parent="Widget.AppCompat.ListView.DropDown">
    <item name="android:listSelector">@drawable/selectable_background</item>
    <item name="android:divider">@color/light_grey</item>
    <item name="android:dividerHeight">1dp</item>

    <item name="divider">@color/light_grey</item>
  </style>

  <style name="HNews.List" parent="None">
    <item name="android:paddingTop">?actionBarSize</item>
    <item name="android:clipToPadding">false</item>
    <item name="android:descendantFocusability">blocksDescendants</item>
  </style>

  <style name="HNews.Card" parent="None">
    <item name="contentPadding">0dp</item>
    <item name="cardCornerRadius">@dimen/card_corner_radius</item>
    <item name="cardPreventCornerOverlap">false</item>
  </style>

  <style name="HNewsButton" parent="android:Widget.Holo.Button" />

  <style name="HNewsButton.Borderless" parent="android:Widget.Holo.Button.Borderless">
  </style>

  <style name="HNews.TabStrip" parent="None">
    <item name="android:clipToPadding">false</item>
    <item name="android:paddingLeft">@dimen/appbar_tab_left_padding</item>
  </style>

  <style name="HNews.Feed.TabStrip" parent="HNews.TabStrip" />

  <style name="HNews.TabIndicator" parent="None">
    <item name="android:background">@color/orange</item>
    <item name="android:paddingLeft">@dimen/appbar_tab_indicator_horizontal_padding</item>
    <item name="android:paddingRight">@dimen/appbar_tab_indicator_horizontal_padding</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">@color/tab_text_color</item>
    <item name="android:textSize">@dimen/appbar_tab_title_text</item>
    <item name="android:textStyle">@integer/font_textStyle_medium</item>
    <item name="android:fontFamily">@string/font_fontFamily_medium</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:lines">1</item>
  </style>

  <!-- Empty view -->
  <style name="EmptyView">
    <item name="android:text">@string/empty_view_text</item>
    <item name="android:textSize">@dimen/empty_view_text</item>
    <item name="android:textColor">@color/feed_empty_text</item>
    <item name="android:visibility">gone</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="HNews.Feed.EmptyView" parent="EmptyView" />

  <style name="HNews.Feed.EmptyView.Loading">
    <item name="android:text">@string/feed_loading_text</item>
  </style>

  <style name="HNews.AppBar" parent="Widget.AppCompat.Toolbar">
    <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
  </style>

</resources>
